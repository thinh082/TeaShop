@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<SanPham>
<section class="home-slider owl-carousel">

	<div class="slider-item" style="background-image: url(/images/bg_3.jpg);" data-stellar-background-ratio="0.5">
		<div class="overlay"></div>
		<div class="container">
			<div class="row slider-text justify-content-center align-items-center">

				<div class="col-md-7 col-sm-12 text-center ftco-animate">
					<h1 class="mb-3 mt-5 bread">Order Online</h1>
					<p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Shop</span></p>
				</div>

			</div>
		</div>
	</div>
</section>


<section class="ftco-menu mb-5 pb-5">
	<div class="container">
		<div class="row d-md-flex">
			<div class="col-lg-12 ftco-animate p-md-5">
				<div class="row">
					<div class="col-md-12 nav-link-wrap mb-5">
						<div class="nav ftco-animate nav-pills justify-content-center" id="v-pills-tab" role="tablist" aria-orientation="vertical">
							<a class="nav-link"  href="/Product/Index?query=ThaoMoc">Thảo Mộc</a>

							<a class="nav-link"  href="/Product/Index?query=TruyenThong" >Truyền Thống</a>

							<a class="nav-link" href="/Product/Index?query=UopHuong" >ướp Hương</a>

							<a class="nav-link" href="/Product/Index?query=DacBiet" >Đặc Biệt</a>

						</div>
					</div>
					<div class="col-md-12 d-flex align-items-center">

						<div class="tab-content ftco-animate" id="v-pills-tabContent">

							<div class="tab-pane fade show active" id="v-pills-0" role="tabpanel" aria-labelledby="v-pills-0-tab">
								<div class="row">
									@foreach(SanPham item in Model)
									{
										<div class="col-md-3">
											<div class="menu-entry">
												<a href="/Product/Details?MaSp=@item.MaSp" class="img" style="background-image: url(/images/@item.Hinh);"></a>
												<div class="text text-center pt-4">
													<h3><a href="product-single.html">@item.TenSp</a></h3>
													<p>@item.MoTa</p>
													<p class="price"><span>@item.Gia VND</span></p>
													<p><a href="/Product/Details?MaSp=@item.MaSp" class="btn btn-primary btn-outline-primary">Chi tiết</a></p>
												</div>
											</div>
										</div>
									}						
								</div>
							</div>							
							
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

