    <script>
                $(document).ready(function() {
            // Toggle chatbot
            $('#chatbot-toggle').click(function() {
                $('#chatbot-container').toggleClass('active');
            });

            $('#chatbot-close').click(function() {
                $('#chatbot-container').removeClass('active');
            });

            // Send message
            $('#chatbot-send').click(sendMessage);
            $('#chatbot-user-input').keypress(function(e) {
                if (e.which === 13) {
                    sendMessage();
                }
            });

            // Initial bot message
            addBotMessage("Xin chào bạn cần gì giúp đỡ ạ!");

            function sendMessage() {
                const userInput = $('#chatbot-user-input').val().trim();
                if (userInput) {
                    addUserMessage(userInput);
                    $('#chatbot-user-input').val('');
                    respondToUser(userInput);
                }
            }

            function addUserMessage(message) {
                $('#chatbot-messages').append(
                    `<div class="message user-message">${message}</div>`
                );
                scrollToBottom();
            }

            function addBotMessage(message) {
                $('#chatbot-messages').append(
                    `<div class="message bot-message">${message}</div>`
                );
                scrollToBottom();
            }

            function scrollToBottom() {
                const messages = $('#chatbot-messages');
                messages.scrollTop(messages[0].scrollHeight);
            }

                    function respondToUser(message) {
            const lowerMsg = message.toLowerCase();

            // 1. Cấu trúc mảng keyword → response
            const patterns = [
                {
                    // Khi tin nhắn chứa 1 trong các từ trong mảng này
                    keywords: ['menu', 'drink', 'food', 'thực đơn', 'đồ uống', 'món ăn'],
                    response: "We offer a variety of coffee drinks, teas, and pastries. You can check our full menu <a href='/menu.html'>here</a>."
                },
                {
                    keywords: ['hours', 'open', 'time', 'giờ mở cửa', 'mấy giờ'],
                    response: "We're open daily from 7:00 AM to 9:00 PM."
                },
                {
                    keywords: ['sản phẩm nổi bật', 'nổi bật', 'bán chạy', 'top sản phẩm'],
                    response: "Sản phẩm bán chạy nhất shop: <a href='/Product/Detail?MaSp=SP0013'>Xem chi tiết</a>."
                },
                {
                    keywords: ['order', 'delivery', 'takeout', 'đặt hàng', 'giao hàng', 'mang về'],
                    response: "Bạn có thể đặt hàng sản phẩm ngay đây: <a href='/Product/Index?query=TruyenThong'>online shop</a> or call us at +2 392 3929 210 for delivery."
                },
                {
                    // Dùng regex cho các chào hỏi linh hoạt
                    regex: /\b(hi|hello|hey|xin chào)\b/,
                    response: "Hello there! How can I assist you today?"
                },
                {
                    regex: /\b(thank|cảm ơn)\b/,
                    response: "You're welcome! Is there anything else I can help with?"
                }
            ];

            // 2. Duyệt qua từng pattern
            for (const p of patterns) {
                // nếu có định nghĩa regex thì test
                if (p.regex && p.regex.test(lowerMsg)) {
                    addBotMessage(p.response);
                    return;
                }
                // hoặc nếu có mảng keywords thì check .includes()
                if (p.keywords && p.keywords.some(kw => lowerMsg.includes(kw))) {
                    addBotMessage(p.response);
                    return;
                }
            }

            // 3. Mặc định nếu không match
            addBotMessage("I'm sorry, I didn't understand that. Could you ask about our menu, hours, or location?");
        }

        });
    </script>
