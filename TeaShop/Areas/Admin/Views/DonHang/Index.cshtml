@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model List<DonHang>
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor">Quản lý đơn hàng</h3>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <!-- column -->
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-block">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="card-title">Bảng Đơn Hàng</h4>
                            <button class="btn btn-primary" data-toggle="modal" data-target="#themDonHangModal">
                                <i class="fa fa-plus"></i> Thêm đơn hàng
                            </button>
                        </div>

                        <!-- Modal Thêm đơn hàng -->
                        <div class="modal fade" id="themDonHangModal" tabindex="-1" role="dialog" aria-labelledby="themDonHangModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-lg" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="themDonHangModalLabel">Thêm đơn hàng mới</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <form action="/Admin/DonHang/ThemDonHang" method="post">
                                        <div class="modal-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="maDonHang">Mã đơn hàng</label>
                                                        <input type="text" class="form-control" id="maDonHang" name="MaDonHang" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="email">Email khách hàng</label>
                                                        <input type="email" class="form-control" id="email" name="Email" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="trangThai">Trạng thái</label>
                                                        <select class="form-control" id="trangThai" name="TrangThai" required>
                                                            <option value="Chờ xác nhận">Chờ xác nhận</option>
                                                            <option value="Đã xác nhận">Đã xác nhận</option>
                                                            <option value="Đang giao hàng">Đang giao hàng</option>
                                                            <option value="Đã giao hàng">Đã giao hàng</option>
                                                            <option value="Đã hủy">Đã hủy</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="ngayDat">Ngày đặt</label>
                                                        <input type="datetime-local" class="form-control" id="ngayDat" name="NgayDat" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="ngayGiao">Ngày giao (nếu có)</label>
                                                        <input type="datetime-local" class="form-control" id="ngayGiao" name="NgayGiao">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="tongTien">Tổng tiền</label>
                                                        <input type="number" class="form-control" id="tongTien" name="TongTien" required>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="diaChiGiaoHang">Địa chỉ giao hàng</label>
                                                <textarea class="form-control" id="diaChiGiaoHang" name="DiaChiGiaoHang" rows="3" required></textarea>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                                            <button type="submit" class="btn btn-primary">Lưu đơn hàng</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="border-radius: 10px; overflow: hidden;">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Mã ĐH</th>
                                        <th>Email KH</th>
                                        <th>Trạng thái</th>
                                        <th>Ngày đặt</th>
                                        <th>Ngày giao</th>
                                        <th>Tổng tiền</th>
                                        <th>Địa chỉ giao</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (DonHang item in Model)
                                    {
                                        <form action="/Admin/DonHang/CapNhatDonHang" method="post" style="display: inline;">
                                        <tr>
                                            <td>
                                                <input value="@item.MaDonHang" name="MaDonHang" class="form-control" readonly style="background-color: #f0f0f0;" />
                                            </td>
                                            <td>
                                                <input value="@item.Email" name="Email" class="form-control" />
                                            </td>
                                            <td>
                                               <input value="@item.TrangThai" name="TrangThai" class="form-control" />
                                            </td>
                                            <td>
                                                <input type="datetime-local" value="@item.NgayDat.ToString("yyyy-MM-ddTHH:mm")" name="NgayDat" class="form-control" />
                                            </td>
                                            <td>
                                               <input type="datetime-local" value="@item.NgayGiao.ToString("yyyy-MM-ddTHH:mm")" name="NgayGiao" class="form-control" />
                                                
                                            </td>
                                            <td>
                                                <input type="number" value="@item.TongTien" name="TongTien" class="form-control" />
                                            </td>
                                            <td>
                                                <textarea class="form-control" name="DiaChiGiaoHang" rows="2">@item.DiaChiGiaoHang</textarea>
                                            </td>
                                            <td>
                                                                                     
                                                    <button type="submit" class="btn btn-success btn-sm">Cập nhật</button>
                                                    <a class="btn btn-danger" href="/Admin/DonHang/XoaDonHang?MaDonHang=@item.MaDonHang">Xóa</a>
                                                
                                            </td>
                                        </tr>
                                        </form>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- footer -->
    <!-- ============================================================== -->
    <footer class="footer">
        © 2017 Material Pro Admin by wrappixel.com
    </footer>
    <!-- ============================================================== -->
    <!-- End footer -->
    <!-- ============================================================== -->
</div>
<!-- ============================================================== -->
<!-- End Page wrapper  -->
<!-- ============================================================== -->
</div>

<!-- Thêm các thư viện cần thiết nếu chưa có -->
@section scripts {
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
}