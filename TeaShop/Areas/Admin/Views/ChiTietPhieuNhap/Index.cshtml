@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model List<ChiTietPhieuNhap>
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor">Quản lý đơn hàng</h3>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <!-- column -->
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-block">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="card-title">Bảng Phiếu Nhập</h4>
                            <button class="btn btn-primary" data-toggle="modal" data-target="#themDonHangModal">
                                <i class="fa fa-plus"></i> Thêm Phiếu Nhập
                            </button>
                        </div>

                        <!-- Modal Thêm đơn hàng -->
                        <div class="modal fade" id="themDonHangModal" tabindex="-1" role="dialog" aria-labelledby="themDonHangModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-lg" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="themDonHangModalLabel">Thêm Chi Tiết Phiếu Nhập mới</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <form action="/Admin/ChiTietPhieuNhap/ThemCTPN" method="post">
                                        <div class="modal-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="maDonHang">Mã phiếu nhập</label>
                                                        <input type="text" class="form-control" id="maDonHang" name="MaPhieuNhap" required>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="ngayDat">Mã Sản Phẩm</label>
                                                        <input type="datetime-local" class="form-control" id="" name="MaSp" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="ngayGiao">Giá Nhập</label>
                                                        <input type="datetime-local" class="form-control" name="GiaNhap">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="ngayGiao">Số Lượng Nhập</label>
                                                        <input type="datetime-local" class="form-control" name="SoLuongNhap">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                                            <button type="submit" class="btn btn-primary">Lưu Chi Tiết Phiếu Nhập</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="border-radius: 10px; overflow: hidden;">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Id</th>
                                        <th>Mã Phiếu Nhập</th>
                                        <th>Mã Sản Phẩm</th>
                                        <th>Giá Nhập</th>
                                        <th>Số Lượng Nhập</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (ChiTietPhieuNhap item in Model)
                                    {
                                        <form action="/Admin/ChiTietPhieuNhap/CapNhatPN" method="post" style="display: inline;">
                                        <tr>
                                            <td>
                                                <input value="@item.ID" name="ID" class="form-control" readonly style="background-color: #f0f0f0;" />
                                            </td>
                                            <td>
                                                <input value="@item.MaPhieuNhap" name="MaPhieuNhap" class="form-control" />
                                            </td>
                                            <td>
                                                <input value="@item.MaSp" name="MaSp" class="form-control" />
                                            </td>
                                            <td>
                                                <input type="number" value="@item.GiaNhap" name="GiaNhap" class="form-control" />
                                            </td>
                                            <td>
                                                <input type="number" value="@item.SoLuongNhap" name="SoLuongNhap" class="form-control" />
                                            </td>
                                            <td>
                                                <button type="submit" class="btn btn-success btn-sm">Cập nhật</button>
                                                <a class="btn btn-danger" href="/Admin/ChiTietPhieuNhap/XoaCTPN?ID=@item.ID">Xóa</a>

                                            </td>
                                        </tr>
                                        </form>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- footer -->
    <!-- ============================================================== -->
    <footer class="footer">
        © 2017 Material Pro Admin by wrappixel.com
    </footer>
    <!-- ============================================================== -->
    <!-- End footer -->
    <!-- ============================================================== -->
</div>
<!-- ============================================================== -->
<!-- End Page wrapper  -->
<!-- ============================================================== -->
</div>

<!-- Thêm các thư viện cần thiết nếu chưa có -->
@section scripts {
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
}