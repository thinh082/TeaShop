@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model List<KiemKeKho>

<div class="page-wrapper">
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor">Quản lý Kiểm Kê Kho</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-block">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="card-title">Bảng Kiểm Kê Kho</h4>
                            <button class="btn btn-primary" data-toggle="modal" data-target="#themKiemKeModal">
                                <i class="fa fa-plus"></i> Thêm Phiếu Kiểm Kê
                            </button>
                        </div>

                        <!-- Modal Thêm Kiểm Kê -->
                        <div class="modal fade" id="themKiemKeModal" tabindex="-1" role="dialog" aria-labelledby="themKiemKeModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-lg" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="themKiemKeModalLabel">Thêm Phiếu Kiểm Kê Mới</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <form action="/Admin/KiemKe/ThemKiemKe" method="post">
                                        <div class="modal-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="maKiemKe">Mã Kiểm Kê</label>
                                                        <input type="text" class="form-control" id="maKiemKe" name="MaKiemKe" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="ngayKiemKe">Ngày Kiểm Kê</label>
                                                        <input type="datetime-local" class="form-control" id="ngayKiemKe" name="NgayKiemKe" required>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="nguoiKiemKe">Người Kiểm Kê</label>
                                                        <input type="text" class="form-control" id="nguoiKiemKe" name="NguoiKiemKe" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="ghiChu">Ghi Chú</label>
                                                        <textarea class="form-control" id="ghiChu" name="GhiChu" rows="3"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                                            <button type="submit" class="btn btn-primary">Lưu Phiếu Kiểm Kê</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- Bảng danh sách kiểm kê -->
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" style="border-radius: 10px; overflow: hidden;">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Mã Kiểm Kê</th>
                                        <th>Ngày Kiểm Kê</th>
                                        <th>Người Kiểm Kê</th>
                                        <th>Ghi Chú</th>
                                        <th>Thao Tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <form action="/Admin/KiemKe/CapNhatKiemKe" method="post" style="display: inline;">
                                        <tr>
                                            <td>
                                                <input value="@item.MaKiemKe" name="MaKiemKe" class="form-control" readonly style="background-color: #f0f0f0;" />
                                            </td>
                                            <td>
                                                <input type="datetime-local" value="@item.NgayKiemKe.ToString("yyyy-MM-ddTHH:mm")" name="NgayKiemKe" class="form-control" />
                                            </td>
                                            <td>
                                                <input value="@item.NguoiKiemKe" name="NguoiKiemKe" class="form-control" />
                                            </td>
                                            <td>
                                                <textarea name="GhiChu" class="form-control">@item.GhiChu</textarea>
                                            </td>
                                            <td>
                                                <button type="submit" class="btn btn-success btn-sm">Cập nhật</button>
                                                <a class="btn btn-danger btn-sm" href="/Admin/KiemKe    /XoaKiemKe?MaKiemKe=@item.MaKiemKe">Xóa</a>
                                            </td>
                                        </tr>
                                        </form>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer">
        © 2025 Material Pro Admin by wrappixel.com
    </footer>
</div>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
}
